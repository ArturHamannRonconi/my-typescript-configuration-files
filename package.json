{
  "name": "my-typescript-configuration-files",
  "repository": "git@github.com:ArturHamannRonconi/my-typescript-configuration-files.git",
  "author": "ArturHamannRonconi <arturhronconi@gmail.com>",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/eslint": "^8.2.1",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.3",
    "git-commit-msg-linter": "^3.2.8",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.3",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "rm -fr dist/",
    "start": "node src/server.ts",
    "debug": "node --inspect=0.0.0.0:9229 --nolazy src/server.ts",
    "dev": "ts-node-dev --ignore-watch node_modules --transpile-only --respawn --clear src/server.ts",
    "test": "jest -i --passWithNoTests --silent --noStackTrace",
    "test:verbose": "jest -i --passWithNoTests",
    "test:staged": "yarn test --findRelatedTests",
    "test:ci": "yarn test:verbose --coverage"
  },
  "dependencies": {
    "dotenv": "^10.0.0"
  }
}
