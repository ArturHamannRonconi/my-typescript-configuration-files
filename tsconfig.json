{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": ["./src/config/*"]
    }
  },
  "include": ["./src"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "node_modules"
  ]
}
